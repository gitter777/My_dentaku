<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:scaleType="centerCrop"
        android:src="@drawable/shape2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <TableLayout
        android:id="@+id/keyBox"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btMC"
                android:background="@drawable/shape"
                android:onClick="mClear"
                android:textStyle="italic"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="MC"
                android:textSize="18dp"/>

            <Button
                android:id="@+id/btMR"
                android:onClick="mRecall"
                android:textStyle="italic"
                android:background="@drawable/shape"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="MR"
                android:textSize="18dp"/>

            <Button
                android:id="@+id/btMm"
                android:onClick="mMinus"
                android:textStyle="italic"
                android:background="@drawable/shape"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="M -"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/btMp"
                android:textStyle="italic"
                android:onClick="mPlus"
                android:background="@drawable/shape"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="M +"
                android:textSize="18dp"/>

            <Button
                android:id="@+id/btWaru"
                android:onClick="waru"
                android:background="@drawable/shape5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="÷"
                android:textColor="#ffff"
                android:textSize="20dp"/>
        </TableRow>


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/plusMinus"
                android:onClick="nijo_jo"
                android:background="@drawable/shape"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/bt7"
                android:onClick="setSeven"
                android:textStyle="italic"
                android:background="@drawable/shape3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="7"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/bt8"
                android:onClick="setEight"
                android:textStyle="italic"
                android:background="@drawable/shape3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="8"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/bt9"
                android:onClick="setNine"
                android:textStyle="italic"
                android:background="@drawable/shape3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="9"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/btKAKE"
                android:onClick="kakuru"
                android:background="@drawable/shape5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="×"
                android:textColor="#ffff"
                android:textSize="20dp"/>
        </TableRow>


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btC"
                android:onClick="c"
                android:textStyle="italic"
                android:background="@drawable/shape"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="C"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/bt4"
                android:onClick="setFour"
                android:textStyle="italic"
                android:background="@drawable/shape3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="4"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/bt5"
                android:onClick="setFive"
                android:textStyle="italic"
                android:background="@drawable/shape3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="5"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/bt6"
                android:onClick="setSix"
                android:textStyle="italic"
                android:background="@drawable/shape3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="6"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/btHIKU"
                android:onClick="hiku"
                android:background="@drawable/shape5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="-"
                android:textColor="#ffff"
                android:textSize="20dp"/>
        </TableRow>


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btAC"
                android:onClick="ac"
                android:textStyle="italic"
                android:background="@drawable/shape"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="AC"
                android:textColor="#F50057"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/bt1"
                android:textStyle="italic"
                android:onClick="setOne"
                android:background="@drawable/shape3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="1"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/bt2"
                android:onClick="setTwo"
                android:textStyle="italic"
                android:background="@drawable/shape3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="2"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/bt3"
                android:textStyle="italic"
                android:onClick="setTree"
                android:background="@drawable/shape3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="3"
                android:textSize="20dp"/>

        </TableRow>


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/bt0"
                android:onClick="setZero"
                android:textStyle="italic"
                android:background="@drawable/shape3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="0"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/bt00"
                android:textStyle="italic"
                android:onClick="setWZero"
                android:background="@drawable/shape3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="00"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/btConma"
                android:onClick="setConma"
                android:background="@drawable/shape3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="・"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/btEQUAL"
                android:onClick="equal"
                android:background="@drawable/shape4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="="
                android:textSize="20dp"/>

        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btTASU"
        android:onClick="tasu"
        android:background="@drawable/shape5"
        android:padding="1dp"
        app:layout_constraintRight_toRightOf="@id/keyBox"
        app:layout_constraintBottom_toBottomOf="@id/keyBox"
        android:layout_width="70dp"
        android:layout_height="140dp"
        android:text="+"
        android:textColor="#ffff"
        android:textSize="22dp"/>

    <TextView
        android:id="@+id/txResult"
        android:text="0"
        android:textColor="#ffff"
        android:textSize="43sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/keyBox"
        app:layout_constraintRight_toRightOf="@id/keyBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txM"
        android:text=""
        android:textColor="#00E5FF"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="@id/keyBox"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txMode"
        android:text=""
        android:textColor="#FF9100"
        android:textSize="30sp"
        app:layout_constraintRight_toRightOf="@id/keyBox"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <ImageView
        app:layout_constraintLeft_toLeftOf="@id/keyBox"
        android:layout_marginLeft="19dp"
        app:layout_constraintTop_toTopOf="@id/keyBox"
        android:layout_marginTop="83dp"
        android:src="@drawable/x"
        android:layout_width="40dp"
        android:layout_height="40dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>